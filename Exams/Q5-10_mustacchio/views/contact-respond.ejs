<h1><span>respond to contact request</span></h1>
		<form action="/contacts/<%=items.id%>/update" method="post">
			<div class="disabled">
				<%console.log(items)%>
				<input type="text" name="name" id="name" placeholder="name" disabled="disabled" value="<%=items.name%>">
				<input type="text" name="address" id="address" placeholder="address" disabled="disabled" value="<%=items.address%>">
				<input type="email" name="email" id="email" placeholder="email" disabled="disabled" value="<%=items.email%>">
				<input type="tel" name="phone" id="phone" placeholder="phone number (XXX-XXX-XXXX)"
					pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" disabled="disabled" value="<%=items.phone%>">
				<textarea name="message" id="message" placeholder="MESSAGE" required disabled="disabled">
					<%=items.message%>
				</textarea>
				<hr />
			</div>
			<textarea name="response" id="response" placeholder="RESPONSE" required></textarea>
			<input type="hidden" name="id" id="id" value="23598798797235">
		
			<input type="submit" name="send" id="send" value="send">
			<a href="/contacts" name="cancel" id="cancel">cancel</a>
		</form>
